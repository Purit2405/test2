<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- พื้นหลังสีขาว -->
    <solid android:color="@android:color/white" />

    <!-- มุมโค้ง -->
    <corners android:radius="16dp" />

    <!-- เส้นขอบบาง ๆ -->
    <stroke
        android:width="1dp"
        android:color="#EEEEEE" />

    <!-- ระยะขอบด้านใน -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

</shape>
