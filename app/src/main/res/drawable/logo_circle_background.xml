<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- สีพื้นหลัง -->
    <solid android:color="#FFFFFF" />

    <!-- เงา/ขอบ (เลือกใส่หรือไม่ใส่ก็ได้) -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- ระยะห่างภายใน -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

</shape>
